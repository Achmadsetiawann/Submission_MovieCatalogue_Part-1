<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4D000000"
    >

        <ImageView
            android:id="@+id/list_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/poster_spiderman"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:text="list_title"
            android:textSize="@dimen/title_text"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/list_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:text="list_description"
            android:textSize="@dimen/sub_title_text"
            android:textColor="@android:color/white"
            android:maxLines="3"
            />

        <TextView
            android:id="@+id/list_runtimetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/listview_margin_top"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:text="Run Time"
            android:textSize="@dimen/sub_title_text"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/list_runtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:text="list_runtime"
            android:textSize="@dimen/normal_text"
            android:textColor="@android:color/white"
            />

</LinearLayout>
