<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMovie">


    <ImageView
        android:id="@+id/img_movie"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_marginTop="7dp"
        />

    <TextView
        android:id="@+id/title_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/listview_film_margin"
        android:layout_toEndOf="@+id/img_movie"
        android:layout_marginTop="@dimen/listview_margin_top"
        android:layout_marginBottom="@dimen/listview_margin_bottom"
        android:text="@string/title_movie"
        android:textSize="@dimen/title_text"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/overview_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/listview_film_margin"
        android:layout_toEndOf="@+id/img_movie"
        android:layout_below="@id/title_movie"
        android:layout_marginTop="@dimen/listview_margin_top"
        android:layout_marginBottom="@dimen/listview_margin_bottom"
        android:text="@string/overview_movie"
        android:textSize="@dimen/description_text"
        android:maxLines="5"
        />

    <TextView
        android:id="@+id/runtime_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/listview_film_margin"
        android:layout_toEndOf="@+id/img_movie"
        android:layout_below="@id/overview_movie"
        android:layout_marginTop="@dimen/listview_margin_top"
        android:layout_marginBottom="@dimen/listview_margin_bottom"
        android:text="@string/runtime_movie"
        android:textSize="@dimen/normal_text"
        android:maxLines="3"
        />

</RelativeLayout >
