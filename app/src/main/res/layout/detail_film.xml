<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMovie">


    <ImageView
        android:id="@+id/img_movie"
        android:layout_width="190dp"
        android:layout_height="305dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/title_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_listview_film_margin"
        android:layout_toEndOf="@+id/img_movie"
        android:text="@string/title_movie"
        android:textSize="@dimen/title_text"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/overview_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_listview_film_margin"
        android:layout_toEndOf="@+id/img_movie"
        android:layout_marginTop="10dp"
        android:layout_below="@id/title_movie"
        android:text="@string/overview_movie"
        android:textSize="@dimen/description_text"
        />

    <TextView
        android:id="@+id/gendre_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_listview_film_margin"
        android:layout_toEndOf="@+id/img_movie"
        android:layout_marginTop="10dp"
        android:layout_below="@id/overview_movie"
        android:text="@string/gendre_movie"
        android:textSize="@dimen/sub_title_text"
        android:maxLines="3"
        />

    <TextView
        android:id="@+id/runtime_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_listview_film_margin"
        android:layout_toEndOf="@+id/img_movie"
        android:layout_marginTop="10dp"
        android:layout_below="@id/gendre_movie"
        android:text="@string/runtime_movie"
        android:textSize="@dimen/sub_title_text"
        android:maxLines="3"
        />

    <TextView
        android:id="@+id/budget_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_listview_film_margin"
        android:layout_toEndOf="@+id/img_movie"
        android:layout_marginTop="10dp"
        android:layout_below="@id/runtime_movie"
        android:text="@string/budget_movie"
        android:textSize="@dimen/sub_title_text"
        android:maxLines="3"
        />

    <TextView
        android:id="@+id/revenue_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_listview_film_margin"
        android:layout_toEndOf="@+id/img_movie"
        android:layout_marginTop="10dp"
        android:layout_below="@id/budget_movie"
        android:text="@string/revenue_movie"
        android:textSize="@dimen/sub_title_text"
        android:maxLines="3"
        />

    <TextView
        android:id="@+id/review_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_listview_film_margin"
        android:layout_toEndOf="@+id/img_movie"
        android:layout_marginTop="10dp"
        android:layout_below="@id/revenue_movie"
        android:text="@string/review_movie"
        android:textSize="@dimen/sub_title_text"
        android:maxLines="3"
        />

</RelativeLayout >


